@REM set backspace=2   " Backspace deletes like most programs in insert mode
@REM set nobackup
@REM set nowritebackup
@REM set noswapfile    " http://robots.thoughtbot.com/post/18739402579/global-gitignore#comment-458413287
@REM set history=50
@REM set ruler         " show the cursor position all the time
@REM set showcmd       " display incomplete commands
@REM set incsearch     " do incremental searching
@REM set laststatus=2  " Always display the status line
@REM set autowrite     " Automatically :write before running commands
@REM set modelines=0   " Disable modelines as a security precaution
@REM set nomodeline

@REM " Softtabs, 2 spaces
@REM set tabstop=2
@REM set shiftwidth=2
@REM set shiftround
@REM set expandtab

@REM " Display extra whitespace
@REM set list listchars=tab:»·,trail:·,nbsp:·

@REM " Numbers
@REM set number
@REM set numberwidth=5


